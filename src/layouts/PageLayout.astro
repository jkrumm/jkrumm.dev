---
import Head from '@components/Head.astro'
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'
import { PERSON } from '@constants'

type Props = {
	title: string
	description: string
}

const { title, description } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<Head title={`${title} | ${PERSON.url}`} description={description} />
	</head>
	<body class="prose max-w-none dark:prose-invert dark:prose-dark">
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>
